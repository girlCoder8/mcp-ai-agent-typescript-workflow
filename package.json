{
  "name": "mcp-ai-agent-typescript-workflow",
  "version": "1.0.0",
  "description": "CI/CD Automation Pipeline with MCP Agent Orchestrator",
  "main": "dist/index.js",
  "scripts": {

    "// === Build Script ===": "",
    "build": "tsc",
    "start": "npm run build && node dist/index.js",

    "// === Clean Report Files Script ===": "",
    "clean": "rm -rf dist/ test-results/ allure-report/ allure-results/ pipeline-reports/ playwright-report/ logs/",

    "// === Allure Report Scripts ===": "",
    "allure:generate": "npx allure generate allure-results -o allure-report || echo 'allure results generating report from.'",
    "allure:open": "npx allure open allure-report",

    "// === WDIO Mobile Simulator and Real Device Scripts ===": "",
    "test:wdio:ai:mobile": "wdio run wdio.conf.ai.ts",
    "test:wdio:ai:simulator": "npx wdio run src/config/wdio-mobile/wdio.ios.conf.ai.ts",

    "// === Headspin Mobile Cloud Scripts ===": "",
    "test:headspin": "HEADSPIN_ENABLED=true HEADSPIN_DEVICE_CLOUD=true wdio run ./wdio.conf.ai.ts",
    "test:headspin:debug": "HEADSPIN_ENABLED=true HEADSPIN_DEVICE_CLOUD=true DEBUG=true wdio run ./wdio.conf.ai.ts",
    "test:headspin:ci": "HEADSPIN_ENABLED=true HEADSPIN_DEVICE_CLOUD=true CI=true wdio run ./wdio.conf.ai.ts",
    "test:headspin:performance": "HEADSPIN_ENABLED=true HEADSPIN_DEVICE_CLOUD=true HEADSPIN_CAPTURE_PERFORMANCE=true wdio run ./wdio.conf.ai.ts",

    "// === Playwright Web and API Scripts ===": "",
    "dev": "npx playwright test --config=playwright.config.ai.ts tests/web tests/api",
    "test:ai:web": "npx playwright test --config=playwright.config.ai.ts tests/web/",
    "test:ai:api": "npx playwright test --config=playwright.config.ai.ts tests/api/",
    "test:ai:all": "npx playwright test --config=playwright.config.ai.ts tests/web/ tests/api/",
    "test:ai:headed": "npx playwright test --config=playwright.config.ai.ts --headed",

    "// === Setup and Installation ===": "",
    "setup:files": "node -e \"require('./scripts/setup-test-data.js')()\"",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",

    "// === Test Generation Script ===": "",
    "generate:tests": "npm run setup:files && npm run playwright:install",

    "// === Manual Tests ===": "",
    "test:manual": "playwright test --project=manual-web-tests",
    "test:api": "playwright test --project=api-tests",
    "test:visual": "playwright test --project=visual-tests",
    "test:performance": "playwright test --project=performance-tests",

    "// === Reporting ===": "",
    "report:show": "playwright show-report test-reports/playwright-report",
    "report:open": "open test-reports/test-case-report.html",
    "report:json": "cat test-reports/results.json | jq .",
    "report:summary": "node scripts/test-summary.ts",

    "// === Comprehensive Test Suites ===": "",
    "test:full": "npm run clean && npm run generate:tests && npm run test",
    "test:quick": "playwright test --project=chromium-web tests/generated/web/",
    "test:nightly": "npm run test:full && npm run test:visual && npm run test:performance",

    "// === CI/CD Scripts ===": "",
    "test:ci": "npm run generate:tests && playwright test --reporter=github",
    "test:ci:web": "playwright test --project=chromium-web --reporter=github",
    "test:ci:mobile": "playwright test --project=mobile-chrome --reporter=github",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",

    "// === Wiremock Scripts ===": "",
    "wiremock:start": "./scripts/start-wiremock.sh",
    "wiremock:stop": "./scripts/stop-wiremock.sh",

    "// === Health Checks ===": "",
    "health:check": "npx ts-node scripts/health-check.ts",
    "health:urls": "npx ts-node scripts/check-urls.ts",
    "health:dependencies": "npm audit && npm outdated"
  },
  "keywords": [],
  "author": "Barb Gordon",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/chai": "^5.2.2",
    "@types/jquery": "^3.5.32",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "@types/selenium-webdriver": "^4.1.28",
    "@types/webdriverio": "^4.13.3",
    "@wdio/allure-reporter": "^9.18.0",
    "@wdio/appium-service": "^9.18.1",
    "@wdio/cli": "^9.18.4",
    "@wdio/json-reporter": "^9.18.0",
    "@wdio/junit-reporter": "^9.18.0",
    "@wdio/local-runner": "^9.18.1",
    "@wdio/mocha-framework": "^9.18.0",
    "@wdio/spec-reporter": "^9.18.0",
    "@wdio/types": "^9.16.2",
    "allure-playwright": "^3.3.2",
    "appium-xcuitest-driver": "^9.9.6",
    "expect-webdriverio": "^5.4.0",
    "typescript": "^5.0.0",
    "webdriverio": "^9.18.1",
    "wiremock": "^3.13.1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chai": "^5.2.1",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.0",
    "execa": "^9.6.0",
    "openai": "^5.10.2",
    "otplib": "^12.0.1",
    "pg": "^8.16.3"
  }
}
